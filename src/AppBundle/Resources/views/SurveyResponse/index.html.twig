{% extends '::base.html.twig' %}

{% block body -%}
    <h1>SurveyResponse list</h1>

    <table class="records_list table table-condensed table-hover table-striped dataTables">
        <thead>
            <tr>
                <th>Id</th>
                <th>Question</th>
                <th>Answer</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('surveyresponse_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td> {{ entity.question }}</td>
                <td> {{ entity.answer }}</td>
                <td>
                
                
                
                        <a href="{{ path('surveyresponse_edit', { 'id': entity.id }) }}"><button type="button" class="btn btn-xs btn-info">Edit</button></a>
                
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('surveyresponse_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
{% block scriptIncludes %}
<script>
        $(document).ready(function() {
            $('.dataTables').dataTable({
                responsive: true,
                "dom": 'T<"clear">lfrtip',
                "tableTools": {
                    "sSwfPath": "/js/plugins/dataTables/swf/copy_csv_xls_pdf.swf"
                }
            });
        });

        
    </script>
{% endblock %}