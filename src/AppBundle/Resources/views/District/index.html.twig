{% extends '::base.html.twig' %}

{% block body -%}
    <h1>District list</h1>

    <table class="records_list  table table-condensed table-hover table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Region</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('district_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.name }}</td>
                <td>{{ entity.region }}</td>
                <td>
                    <a href="{{ path('district_show', { 'id': entity.id }) }}"><button type="button" class="btn btn-xs btn-success">Show</button></a>
                    <a href="{{ path('vdc_show_district', { 'district': entity.name }) }}"><button type="button" class="btn btn-xs btn-info">List VDCs</button></a>
                    <a href="{{ path('district_edit', { 'id': entity.id }) }}"><button type="button" class="btn btn-xs btn-info">Edit</button></a>
                </td>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('district_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}