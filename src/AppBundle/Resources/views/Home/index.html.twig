{% extends '::base.html.twig' %}

{% block body -%}
{% for entity in entities %}
    <article id="content1" class="ckeditor" contenteditable="true">
        {{ entity.title | raw}}
    </article>
    <article id="content2" class="ckeditor" contenteditable="true">
        {{ entity.description | raw }}
    </article>
{% endfor %}
    
    {% endblock %}
     {%block scriptIncludes %}
     <script type="text/javascript" src="/bundles/ivoryckeditor/ckeditor.js"></script>
<script>

$("#content1, #content2").keyup(function()
 {  
  var name = {id:1, title:$("#content1").html(), description:$("#content2").html()};
    $.post('{{path('home')}}',               
        { data_id:name.id,data_title:name.title,data_description:name.description}, 
            function(response){ 
            console.log("Request Sent");
            }
    );

  return false;
   
  });
</script>

{% endblock %}
