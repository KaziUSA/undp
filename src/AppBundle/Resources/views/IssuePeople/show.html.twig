{% extends '::base.html.twig' %}

{% block body -%}
    <h1>IssuePeople</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Location</th>
                <td>{{ entity.location }}</td>
            </tr>
            <tr>
                <th>Saying</th>
                <td>{{ entity.saying }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('issuepeople') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('issuepeople_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
