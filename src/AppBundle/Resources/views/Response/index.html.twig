{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Response list</h1>

    <table class="records_list table table-condensed table-hover table-striped">
        <thead>
            <tr>
                
                <th>Question</th>
                <th>Answer</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                
               
                <td>{{ entity.question }}</td>
                <td>{{ entity.answer }}</td>
                <td>
               
                        <a href="{{ path('response_edit', { 'id': entity.id }) }}"><button type="button" class="btn btn-xs btn-success">edit</button></a>
               
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

       
            <a href="{{ path('response_new') }}">
                <button type="button" class="btn btn-xs btn-success">Create a new entry</button>
            </a>
        
    {% endblock %}
