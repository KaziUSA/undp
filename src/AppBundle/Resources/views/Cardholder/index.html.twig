{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Cardholder list</h1>

    <table class="records_list table table-condensed table-hover table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('cardholder_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.name }}</td>
                <td>
                
                    <a href="{{ path('cardholder_edit', { 'id': entity.id }) }}"><button type="button" class="btn btn-xs btn-success">Edit</button></a>
                
                </td>
                
            </tr>
        {% endfor %}
        </tbody>
    </table>

        
            <a href="{{ path('cardholder_new') }}">
                <button type="button" class="btn btn-xs btn-info">Create a new entry</button>
            </a>
        
    {% endblock %}
