{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Document list</h1>

    <table class="records_list table table-condensed table-hover table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Download</th>
                <th>Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td>{{ entity.name }}</td>
                <td><a href="{{ entity.file_path }}{{ entity.path }}">Download</a></td>
                <td>{{ entity.date|date('Y/m/d') }}</td>
                <td>
                        <a href="{{ path('document_show', { 'id': entity.id }) }}"><button type="button" class="btn btn-xs btn-success">Show</button></a>
                        <a href="{{ path('document_edit', { 'id': entity.id }) }}"><button type="button" class="btn btn-xs btn-info">Edit</button></a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

            <a href="{{ path('document_new') }}">
                <button type="button" class="btn btn-xs btn-success">Create a new entry</button>
            </a>
    {% endblock %}
