{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Document</h1>

    <table class="record_properties table table-condensed table-hover table-striped">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>Document Type</th>
                <td>{{ entity.documenttype }}</td>
            </tr>
            <tr>
                <th>Language</th>
                <td>{{ entity.language }}</td>
            </tr>
            <tr>
                <th>District</th>
                <td>{{ entity.district }}</td>
            </tr>
            <tr>
                <th>Download</th>
                <td><a href="{{ entity.file_path }}{{ entity.path }}">Download</a></td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ entity.date|date('Y/m/d') }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('document') }}">
        <button type="button" class="btn btn-xs btn-warning">Back to the list</button>
    </a>

    <a href="{{ path('document_edit', { 'id': entity.id }) }}">
        <button type="button" class="btn btn-xs btn-success">Edit</button>
    </a>
    <a href="{{ path('document_new') }}">
        <button type="button" class="btn btn-xs btn-success">Create a new entry</button>
    </a>

    {{ form(delete_form) }}
{% endblock %}
