    </ul>
</div>     
{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <link href="/css/leaflet.css" rel="stylesheet">
    <link href="/css/custom.css" rel="stylesheet">
{% endblock %}


{% block header %}
<div class="col-lg-8">
                    <div class="ibox float-e-margins">
                        <div class="ibox-title">
                            <h5>Are your main problems being addressed?</h5>
                            <div ibox-tools=""></div>
                        </div>
                        <div class="ibox-content">
                            <div>
                                <canvas id="barChart" height="494" width="1060" style="width: 530px; height: 247px;"></canvas>
                            </div>
                        </div>
                    </div>
                </div>
{% endblock %}


{% block scriptIncludes %}
<script type="text/javascript">
		//change these variables
    var theme_color = "#ffffff";//#0099ff
	var border_color = "#ccc";//#f7941e: orange
</script>
<script type="text/javascript" src="/js/leaflet.js"></script>
<script type="text/javascript" src="/js/nepal-districts.js"></script>
<script type="text/javascript" src="/js/custom.js"></script>
<script type="text/javascript" src="/js/graph.js"></script>
<!-- ChartJS-->
<script src="/js/plugins/chartJs/Chart.min.js"></script>
<script type="text/javascript">

var barData = {
        labels: ["Tamang", "Newar", "Muslim", "Janajati", "Gurung", "Dalit", "Chhetri", "Brahmin", "Other"],
        datasets: [
            {
                label: "Yes",
                fillColor: "rgba(220,220,220,0.5)",
                strokeColor: "rgba(220,220,220,0.8)",
                highlightFill: "rgba(220,220,220,0.75)",
                highlightStroke: "rgba(220,220,220,1)",
                data: [{% for num in yes %} {{num}} ,{% endfor %}]
            },
            {
                label: "No",
                fillColor: "rgba(26,179,148,0.5)",
                strokeColor: "rgba(26,179,148,0.8)",
                highlightFill: "rgba(26,179,148,0.75)",
                highlightStroke: "rgba(26,179,148,1)",
                data: [{% for num in no %} {{num}} ,{% endfor %}]
            },
            {
                label: "Neutral/Don't know",
                fillColor: "rgba(100,100,148,0.5)",
                strokeColor: "rgba(100,100,148,0.8)",
                highlightFill: "rgba(100,100,148,0.75)",
                highlightStroke: "rgba(100,100,148,1)",
                data: [{% for num in other %} {{num}} ,{% endfor %}]
            }
        ]
    };

    var barOptions = {
        scaleBeginAtZero: true,
        scaleShowGridLines: true,
        scaleGridLineColor: "rgba(0,0,0,.05)",
        scaleGridLineWidth: 1,
        barShowStroke: true,
        barStrokeWidth: 2,
        barValueSpacing: 5,
        barDatasetSpacing: 1,
        responsive: true,
        scaleShowLabels: true,
        multiTooltipTemplate: "<%= value %>",
    }


    var ctx = document.getElementById("barChart").getContext("2d");
    var myNewChart = new Chart(ctx).Bar(barData, barOptions);
</script>
{% endblock %}

{% block sidebar %}
<div class="ibox-title">
                        
                        <h5>Graphical Representation</h5>
                    </div>
<div class="graph-content">
<div class="graph clearfix">
    
    <div class="index">
    <div class="index-title"><h3>Girl</h3></div>
    <div class="girl index-bar"></div>
    </div>
    <div class="clear"></div>

    <div class="index">
    <div class="index-title"><h3>Boy</h3></div>
    <div class="boy index-bar"></div>
    </div>
    <div class="clear"></div>

    <div class="index">
    <div class="index-title"><h3>Total</h3></div>
    <div class="total-tile index-bar"></div>
    </div>

</div>
</div>
{% endblock %}