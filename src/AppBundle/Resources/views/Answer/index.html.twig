{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Answer list</h1>

    <table class="records_list table table-condensed table-hover table-striped">
        <thead>
            <tr>
                
                <th>Name</th>
                <th>Weight</th>
                <th>Group</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                
                <td>{{ entity.name }}</td>
                <td>{{ entity.weight }}</td>
                <td>{{ entity.answergroup }}</td>
                <td>
                
                        <a href="{{ path('answer_edit', { 'id': entity.id }) }}"><button type="button" class="btn btn-xs btn-success">Edit</button></a>
                
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        
            <a href="{{ path('answer_new') }}">
                <button type="button" class="btn btn-xs btn-info">
                    Create a new entry
                </button>
            </a>
        
    {% endblock %}
