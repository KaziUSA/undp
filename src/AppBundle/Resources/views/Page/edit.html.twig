{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Featured Image</h1>
    <h3>{{ entity.title | raw }}</h3>

    {# form(edit_form) #}
    <form action="edit" method="post" {{ form_enctype(edit_form) }}>
		  {{ form_widget(edit_form) }}
			<br>

			{% if entity.path != NULL %}
    	<img src="{{ entity.file_path }}{{ entity.path }}" width="150px">
    	<br><br>
    	{% endif %}

		  <input id="JQueryClick" type="submit" class="btn btn-xs btn-success" value="Update Featured Image" />
		</form>

    <a href="{{ path('page') }}">
    	<button type="button" class="btn btn-xs btn-warning">
        Back to the list
      </button>
    </a>

    {{ form(delete_form) }}
{% endblock %}
