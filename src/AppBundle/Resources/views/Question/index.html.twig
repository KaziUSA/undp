{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Question list</h1>

    <table class="records_list table table-condensed table-hover table-striped">
        <thead>
            <tr>
                
               
                <th>Question</th>
                <th>Answer Type</th>
                <th>Actions</th>
                
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                
                
                <td><b>{{ entity.number }}.</b> {{ entity.name }}</td>
                <td>{{ entity.answergroup }}</td>
                <td>
                
                        
                  
                        <a href="{{ path('question_edit', { 'id': entity.id }) }}"><button type="button" class="btn btn-xs btn-success">edit</button></a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

       
            <a href="{{ path('question_new') }}">
                <button type="button" class="btn btn-xs btn-success">
                Create a new entry
                </button>
            </a>
       
    {% endblock %}
