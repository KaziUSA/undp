{% extends '::base.html.twig' %}

{% block body -%}
    <h1>IssueNews</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ entity.description | raw }}</td>
            </tr>
            <tr>
                <th>Imageurl</th>
                <td>{{ entity.imageUrl }}</td>
            </tr>
            <tr>
                <th>Audiourl</th>
                <td>{{ entity.audioUrl }}</td>
            </tr>
            <tr>
                <th>Youtubeurl</th>
                <td>{{ entity.youtubeUrl }}</td>
            </tr>
            <tr>
                <th>Createddate</th>
                <td>{{ entity.createdDate | date('Y-m-d h:i:s') }}</td>
            </tr>
            <tr>
                <th>Updateddate</th>
                <td>{{ entity.updatedDate | date('Y-m-d h:i:s') }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('issuenews') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('issuenews_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
