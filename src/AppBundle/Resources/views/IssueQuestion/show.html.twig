{% extends '::base.html.twig' %}

{% block body -%}
    <h1>IssueQuestion</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>Keyfindingsmonth</th>
                <td>{{ date('2017-' ~ entity.keyFindingsMonth ~ '-01') | date ('F') }}</td>
                {# doesn't matter what ever year or day - we just need month #}
            </tr>
            <tr>
                <th>Keyfindings</th>
                <td>{{ entity.keyFindings | raw }}</td>
            </tr>
            <tr>
                <th>IssueMapName</th>
                <td>{{ entity.issueMapName }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('issuequestion') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('issuequestion_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
