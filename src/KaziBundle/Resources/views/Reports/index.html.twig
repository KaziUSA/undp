{% block scriptIncludes %}
<script>
	$(document).ready(function() {
		$("#monthall").change(function(){
      $(".month").prop('checked', $(this).prop("checked"));
      if(!$(this).is(':checked')){
      	$('.month').hide();
      }
      else {
      	$('.month').show();
      }
    });

		function filter_report(month) {
			$('#month-wise-report #month'+month).change(function(){
				/*$('.month').hide();
	      $('.month.'+month).show();*/
	      
	      //$('.month').hide();
	      if(!$(this).is(':checked')){
	      	$('.month.'+month).hide();	
	      } else {
	      	$('.month.'+month).show();
	      }
	    });
    }
    filter_report('01');
    filter_report('02');
    filter_report('03');
    filter_report('04');
    filter_report('05');
    filter_report('06');
    filter_report('07');
    filter_report('08');
    filter_report('09');
    filter_report('10');
    filter_report('11');
    filter_report('12');
	});
</script>
